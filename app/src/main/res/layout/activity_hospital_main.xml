<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hospital_Main">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:paddingLeft="50dp"
        android:text="목포해양대학교병원"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/select_text"
        android:layout_width="600dp"
        android:layout_height="150dp"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:text="원하시는 업무를 선택하세요."
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/button4"
        android:layout_width="600dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/hospital_btn_purple"
        android:onClick="goto_medical_record"
        android:text="진료기록·영상CD복사\n번호표"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_text" />

    <Button
        android:id="@+id/button7"
        android:layout_width="600dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/hospital_btn_blue"
        android:onClick="goto_prescription"
        android:text="수납 처방전"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/homei"
        android:onClick="goto_kiosk_main"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8" />
</androidx.constraintlayout.widget.ConstraintLayout>