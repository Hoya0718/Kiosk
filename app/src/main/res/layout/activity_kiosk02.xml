<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Kiosk_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textSize"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:text="@string/textSize"
                android:textColor="#033359"
                android:textSize="@dimen/font_size_medium" />

            <TextView
                android:id="@+id/textView90"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/arrow"
                android:textSize="@dimen/font_size_medium" />

            <TextView
                android:id="@+id/textView91"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:text="@string/VolumeSize"
                android:textSize="@dimen/font_size_medium" />

            <TextView
                android:id="@+id/textView92"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/arrow_9"
                android:textSize="@dimen/font_size_medium" />

            <TextView
                android:id="@+id/textView93"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:text="@string/VolumeSpeed"
                android:textSize="@dimen/font_size_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/korean_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/hospital_txt_gray_all"
                android:gravity="center"
                android:text="@string/korean_text"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/size_down_Btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="50dp"
                android:layout_weight="1"
                android:background="@drawable/hospital_btn_gray"
                android:onClick="be_down"
                android:text="@string/text_size_small"
                android:textSize="@dimen/font_size_medium" />

            <Button
                android:id="@+id/size_medium_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="50dp"
                android:layout_weight="1"
                android:background="@drawable/hospital_btn_gray"
                android:onClick="be_medium"
                android:text="@string/text_size_medium"
                android:textSize="@dimen/font_size_medium" />

            <Button
                android:id="@+id/size_up_Btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="50dp"
                android:layout_weight="1"
                android:background="@drawable/hospital_btn_gray"
                android:onClick="be_up"
                android:text="@string/text_size_big"
                android:textSize="@dimen/font_size_medium" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pre_Btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn_circle"
            android:onClick="goto_main"
            android:text="@string/previous"
            android:textSize="@dimen/font_size_medium" />

        <Button
            android:id="@+id/save_Btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="1"
            android:background="@drawable/btn_circle"
            android:onClick="goto_kiosk_04"
            android:text="@string/next"
            android:textSize="@dimen/font_size_medium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"></LinearLayout>
</LinearLayout>