<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Kiosk_11">

    <TextView
        android:id="@+id/card_ex_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/insert_card"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/liquidate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:onClick="goto_kiosk_12"
        app:srcCompat="@drawable/liquidate" />

    <Button
        android:id="@+id/cancel_Btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="2"
        android:onClick="goto_kiosk_10"
        android:text="@string/pay_cancle"
        android:textSize="18sp" />
</LinearLayout>