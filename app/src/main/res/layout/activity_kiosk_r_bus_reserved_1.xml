<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Kiosk_R_Bus_Reserved_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:background="@drawable/table_border">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/bus_chooseticket"
                android:textSize="15sp"
                android:gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:background="@drawable/table_border">

            <TextView
                android:id="@+id/bus_departuretime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:text="출발지"/>

            <TextView
                android:id="@+id/bus_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:text="@string/bus_destination"/>

            <TextView
                android:id="@+id/bus_takentime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:text="승차권 선택"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@drawable/table_border"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ticket_departure_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="목포"
                android:textSize="15sp"
                android:layout_marginRight="-10dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ticket_destination_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="광주(유스퀘어)"
                android:textSize="15sp"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="-10dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/ticket_check_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text=">"
                android:textSize="15sp"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="-10dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/table_border">

            <Button
                android:id="@+id/b_cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="90sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/b_cancel"
                android:textSize="20sp"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="40sp"
                android:autoSizeStepGranularity="2sp"/>

            <Button
                android:id="@+id/b_payment_btn"
                android:layout_width="match_parent"
                android:layout_height="90sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="40sp"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:text="@string/bus_issue"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>