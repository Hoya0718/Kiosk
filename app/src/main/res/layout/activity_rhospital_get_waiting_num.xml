<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".r_Hospital_Get_Waiting_Num">

    <TextView
        android:id="@+id/textView141"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="대기표 발급"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView148"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:text="32"
        android:textColor="#000000"
        android:textSize="100sp"
        app:layout_constraintStart_toStartOf="@+id/num"
        app:layout_constraintTop_toBottomOf="@+id/num" />

    <TextView
        android:id="@+id/textView149"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="대기인수: 3명"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="@+id/textView148"
        app:layout_constraintTop_toBottomOf="@+id/textView148" />

    <TextView
        android:id="@+id/textView151"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:gravity="center"
        android:text="안녕하세요 고객님\n접수번호순으로 처리되오니\n잠시만 기다려주세요"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/textView149"
        app:layout_constraintStart_toStartOf="@+id/textView149"
        app:layout_constraintTop_toBottomOf="@+id/textView149" />

    <TextView
        android:id="@+id/num"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="접수번호"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/textView141"
        app:layout_constraintTop_toBottomOf="@+id/textView141" />

    <TextView
        android:id="@+id/textView162"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="아래에서 번호표를 뽑아주세요"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/textView151"
        app:layout_constraintTop_toBottomOf="@+id/textView151" />

    <Button
        android:id="@+id/button17"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:onClick="goto_main"
        android:text="메인화면으로"
        app:layout_constraintEnd_toEndOf="@+id/textView162"
        app:layout_constraintStart_toStartOf="@+id/textView162"
        app:layout_constraintTop_toBottomOf="@+id/textView162" />
</androidx.constraintlayout.widget.ConstraintLayout>
